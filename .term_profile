#!/bin/bash

# source this customized profile via `source ~/.profile` in the ~/.bash_profile
PROMPT_COMMAND=__prompt_command
__prompt_command() {
  local NORMAL_COLOR='\[\e[0m\]'
  local RED='\[\e[0;31m\]'
  local YELLOW='\[\e[0;33m\]'
  local GREY='\[\e[0;37m\]'
  local USER='\u'
  local BASENAME='\W'
  PS1="${RED}${USER}${NORMAL_COLOR}|${YELLOW}${BASENAME}${GREY}$(__git_ps1)${NORMAL_COLOR} Â» "
}

export LSCOLORS="dxfxBxDxbxHxHxBxxghxhx"
export CLICOLOR=1
alias ls='ls -aFh'
export EDITOR=vim
export HISTTIMEFORMAT="%y/%m/%d %T "

# bash_script_dir is how to get the script's directory in bash.
function bash_script_dir {
  printf 'DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"\n'
}

function datefromint () {
  date --date="@$1"
}
