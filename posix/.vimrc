set background=dark
set paste
syntax enable
set tabstop=2
set expandtab
set cursorline
filetype indent on
set showmatch
set ruler
set hlsearch
set incsearch
set smartcase
set smarttab
set colorcolumn=80
highlight ColorColumn ctermbg=0 guibg=lightgrey
colorscheme murphy # A nice default color scheme that looks close to the homebrew terminal colors
