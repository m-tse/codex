{
  "[go]": {
    "editor.insertSpaces": false,
    "editor.tabSize": 2
  },
  "[python]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  // This is inconsistent with pre-commit checks unfortunately.
  // "[vue]": {
  //   "editor.defaultFormatter": "esbenp.prettier-vscode"
  // },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "files.exclude": {
    "**/venv/**": true
  },
  "search.exclude": {
    "**/venv/**": true
  },
  "editor.acceptSuggestionOnEnter": "off",
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.copyWithSyntaxHighlighting": false,
  "editor.cursorBlinking": "phase",
  "editor.cursorSurroundingLines": 15,
  "editor.cursorWidth": 4,
  "editor.dragAndDrop": false,
  "editor.fontFamily": "SF Mono, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 13.0,
  "editor.hover.delay": 800,
  "editor.minimap.enabled": false,
  "editor.multiCursorModifier": "ctrlCmd",
  // Not sure what these do, but they cause a bug in cursor completion, DO NOT RE-ENABLE
  // "editor.padding.bottom": 10,
  // "editor.padding.top": 10,
  "editor.quickSuggestionsDelay": 0,
  "editor.renderLineHighlight": "all",
  "editor.renderLineHighlightOnlyWhenFocus": true,
  "editor.renderWhitespace": "boundary",
  "editor.rulers": [80, 100, 120],
  "editor.scrollbar.verticalScrollbarSize": 15,
  "editor.smoothScrolling": true,
  "editor.suggest.localityBonus": true,
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "editor.wrappingIndent": "deepIndent",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.openEditors.visible": 1,
  "explorer.sortOrder": "foldersNestsFiles",
  "extensions.ignoreRecommendations": true,
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 100,
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "gitlens.codeLens.enabled": false,
  "gitlens.showWelcomeOnInstall": false,
  "search.seedWithNearestWord": true,
  "search.smartCase": true,
  "search.sortOrder": "countDescending",
  "telemetry.telemetryLevel": "off",
  "terminal.integrated.automationProfile.windows": null,
  "window.nativeFullScreen": false,
  "window.title": "${activeEditorMedium}${separator}${rootName}${separator}${profileName}",
  "window.titleBarStyle": "native",
  "workbench.commandPalette.history": 5,
  "workbench.editor.closeEmptyGroups": false,
  "workbench.editor.closeOnFileDelete": true,
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.perEditorGroup": true,
  "workbench.editor.limit.value": 4,
  "workbench.editor.openPositioning": "first",
  "workbench.editor.revealIfOpen": true,
  "workbench.enableExperiments": false,
  "workbench.fontAliasing": "auto",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.tips.enabled": false,
  "workbench.activityBar.location": "hidden",
  "workbench.editor.empty.hint": "hidden",
  "workbench.editor.tabActionCloseVisibility": false,
  "scm.diffDecorationsGutterWidth": 4,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "prettier.trailingComma": "all",
  "editor.suggestSelection": "recentlyUsedByPrefix",
  "editor.inlineSuggest.enabled": false,
  "editor.suggestOnTriggerCharacters": false,
  "editor.quickSuggestions": {
    "other": "off",
    "comments": "off",
    "strings": "off"
  },
  "prettier.printWidth": 100,
  "security.workspace.trust.untrustedFiles": "open",
  "window.customTitleBarVisibility": "never",
  "javascript.autoClosingTags": false,
  "typescript.autoClosingTags": false,
  "[markdown]": {
    "editor.unicodeHighlight.ambiguousCharacters": false,
    "editor.unicodeHighlight.invisibleCharacters": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    }
  },
  "cursor.cpp.disabledLanguages": ["scminput"],
  "workbench.colorTheme": "Default Dark Modern",
  "editor.formatOnSave": true,
  "window.zoomLevel": -0.4,
  "search.useGlobalIgnoreFiles": true,
  "search.useParentIgnoreFiles": true,
  "update.mode": "manual"
}
